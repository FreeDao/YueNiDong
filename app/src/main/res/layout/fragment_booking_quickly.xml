<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layout">

        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="fill_parent"
            android:layout_height="145dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:text="@string/bookingtime"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <View
                android:id="@+id/view_one"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/tv_one"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/grayblack">

            </View>
            <!--开始时间-->
            <RelativeLayout
                android:id="@+id/rl_starttime"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_below="@id/view_one">

                <TextView
                    android:id="@+id/tv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="14dp"
                    android:gravity="center"
                    android:text="@string/starttime"
                    android:textColor="@color/grayblack"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/tv_starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:hint="请填写活动的开始时间"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

            </RelativeLayout>

            <View
                android:id="@+id/view_two"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/rl_starttime"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/grayblack"></View>


            <!--结束时间-->
            <RelativeLayout
                android:id="@+id/rl_endtime"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_below="@id/view_two">

                <TextView
                    android:id="@+id/tv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="14dp"
                    android:gravity="center"
                    android:text="@string/endtime"
                    android:textColor="@color/grayblack"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/tv_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:hint="请填写活动的结束时间"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/rl_endtime"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/grayblack"></View>
        </RelativeLayout>
        <!--项目类型-->
        <RelativeLayout
            android:id="@+id/rl_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_one"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rl_type"
                android:layout_width="fill_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/tv_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:text="@string/matchtype" />

                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="15dp"
                    android:layout_height="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_underslider" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@id/iv_type"
                    android:gravity="center"
                    android:text="中式八球"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view_three"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_type_text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/grayblack"></View>

            </RelativeLayout>
            <!--项目类型选择-->
            <LinearLayout
                android:id="@+id/ll_one"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_below="@id/rl_type"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_type_chinesetableball"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/view_type_chinesetableball"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"></View>

                    <TextView
                        android:id="@+id/tv_type_chinesetableball"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/chinesetableball"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_type_americantableball"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/view_type_americantableball"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        android:visibility="gone"></View>

                    <TextView
                        android:id="@+id/tv_type_americantableball"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/americantableball"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_type_snooker"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/view_type_snooker"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        android:visibility="gone"></View>

                    <TextView
                        android:id="@+id/tv_type_snooker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/snooker"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


        <!--球桌等级-->
        <RelativeLayout
            android:id="@+id/rl_three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_two"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rl_level"
                android:layout_width="fill_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/tv_level_text"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:text="@string/tablelevel" />

                <ImageView
                    android:id="@+id/iv_level"
                    android:layout_width="15dp"
                    android:layout_height="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_underslider" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@id/iv_level"
                    android:gravity="center"
                    android:text="普通"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/view_four"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_level_text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/grayblack"></View>
            </RelativeLayout>
            <!--项目类型选择-->
            <LinearLayout
                android:id="@+id/ll_two"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_below="@id/rl_level"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_level_normal"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/view_level_normal"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"></View>

                    <TextView
                        android:id="@+id/tv_level_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/normal"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_level_higher"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/view_level_higher"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        android:visibility="gone"></View>

                    <TextView
                        android:id="@+id/tv_level_higher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/higher"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_level_best"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/view_level_best"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        android:visibility="gone"></View>

                    <TextView
                        android:id="@+id/tv_level_best"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/best"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <!--预定数量-->
        <RelativeLayout
            android:id="@+id/rl_four"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@id/rl_three"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/booknumber"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_add" />

            <TextView
                android:id="@+id/tv_coin_count"
                android:layout_width="38dp"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:layout_toLeftOf="@id/iv_add"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <View
                android:layout_width="38dp"
                android:layout_height="0.5dp"
                android:layout_alignLeft="@id/tv_coin_count"
                android:layout_below="@id/tv_coin_count"
                android:background="@color/grayblack"></View>

            <ImageView
                android:id="@+id/iv_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:layout_toLeftOf="@id/tv_coin_count"
                android:src="@drawable/ic_reduce" />
        </RelativeLayout>

        <!--绑定新手机号码-->
        <RelativeLayout
            android:id="@+id/rl_five"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@id/rl_four"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/bindphone" />

            <ImageView
                android:id="@+id/iv_next"
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/ic_next" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@id/iv_next"
                android:text="18888888888"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_commitorder"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@id/rl_five"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/button_nextstep"
            android:text="@string/submitorder"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>
</ScrollView>