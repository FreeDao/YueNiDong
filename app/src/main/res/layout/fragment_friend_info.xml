<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/layout">

        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="fill_parent"
            android:layout_height="320dp"
            android:background="@drawable/pic_lowpoly">


            <com.yuenidong.widget.CircleImageView
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="56dp"
                android:background="@android:color/white" />

            <com.yuenidong.widget.CircleImageView
                android:id="@+id/iv_image"
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="59dp"
                android:src="@drawable/ic_image" />

            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_image"
                android:layout_marginTop="11dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="美女"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@id/tv_name"
                    android:src="@drawable/ic_woman" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_name"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ID:123456"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="107dp"
                android:layout_height="1dp"
                android:layout_below="@id/rl_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:background="@drawable/ic_cutline" />

            <RelativeLayout
                android:id="@+id/rl_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_line"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_label_one"
                        android:layout_width="29dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_billiards" />

                    <ImageView
                        android:id="@+id/iv_lable_two"
                        android:layout_width="29dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/iv_label_one"
                        android:src="@drawable/ic_basketball" />

                    <ImageView
                        android:id="@+id/iv_label_three"
                        android:layout_width="40dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/iv_lable_two"
                        android:src="@drawable/ic_badminton" />
                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tv_care_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="999"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@id/tv_care_count"
                            android:text="关注"
                            android:textColor="@color/grayblack"
                            android:textSize="12dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="16dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tv_fans_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="999"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@id/tv_fans_count"
                            android:text="粉丝"
                            android:textColor="@color/grayblack"
                            android:textSize="12dp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="16dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tv_coin_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="999"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@id/tv_coin_count"
                            android:text="果冻"
                            android:textColor="@color/grayblack"
                            android:textSize="12dp" />
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_part2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_one">
            <!--个性签名-->
            <RelativeLayout
                android:id="@+id/rl_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="82dp"
                    android:background="@drawable/button_me" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="个性签名"
                    android:textColor="@color/grayblack"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="96dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:maxLines="2"
                    android:text="快憋死我了，我要上厕所。厕所里面还蹲着一个人，你让我情何以堪，
额！"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

            </RelativeLayout>

            <View
                android:id="@+id/view_one"
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_below="@id/rl_two"
                android:background="@color/grayblack" />

            <!--我的活动-->
            <RelativeLayout
                android:id="@+id/rl_three"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_below="@id/view_one">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_me" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="我的活动"
                    android:textColor="@color/grayblack"
                    android:textSize="16dp"

                    />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_next" />

            </RelativeLayout>

            <View
                android:id="@+id/view_two"
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_below="@id/rl_three"
                android:background="@color/grayblack" />
            <!--我的收藏-->
            <RelativeLayout
                android:id="@+id/rl_four"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_below="@id/view_two">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_me" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="我的收藏"
                    android:textColor="@color/grayblack"
                    android:textSize="16dp"

                    />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_next" />

            </RelativeLayout>

            <View
                android:id="@+id/view_three"
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_below="@id/rl_four"
                android:background="@color/grayblack" />
            <!--我的签到-->
            <RelativeLayout
                android:id="@+id/rl_five"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_below="@id/view_three">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_me" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="我的签到"
                    android:textColor="@color/grayblack"
                    android:textSize="16dp"

                    />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_next" />

            </RelativeLayout>

            <View
                android:id="@+id/view_four"
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_below="@id/rl_five"
                android:background="@color/grayblack" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="53dp"
            android:layout_below="@id/rl_part2"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_transparent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <!--<ImageButton-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="fill_parent"-->
                <!--android:background="@drawable/button_login" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/button_attention" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:text="关注"
                        android:textColor="@color/grayblack"
                        android:textSize="16dp" />
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <!--<ImageButton-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="fill_parent"-->
                <!--android:background="@drawable/button_login" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/button_talk" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:text="对话"
                        android:textColor="@color/grayblack"
                        android:textSize="16dp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <!--<ImageButton-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="fill_parent"-->
                <!--android:background="@drawable/button_login" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/button_defriend" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:text="拉黑"
                        android:textColor="@color/grayblack"
                        android:textSize="16dp" />
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>