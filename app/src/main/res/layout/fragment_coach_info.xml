<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/layout">

        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="fill_parent"
            android:layout_height="320dp"
            android:background="@drawable/pic_lowpoly">

            <com.yuenidong.widget.CircleImageView
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="56dp"
                android:background="@drawable/ic_outside" />

            <com.yuenidong.widget.CircleImageView
                android:id="@+id/iv_image"
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="59dp"
                android:src="@drawable/ic_image" />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignBottom="@id/iv_image"
                android:layout_alignRight="@id/iv_image"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_authentication" />

            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_image"
                android:layout_marginTop="11dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="美女"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@id/tv_name"
                    android:src="@drawable/ic_woman" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_name"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ID:123456"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="107dp"
                android:layout_height="1dp"
                android:layout_below="@id/rl_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:background="@drawable/ic_cutline" />

            <RelativeLayout
                android:id="@+id/rl_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_line"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_label_one"
                        android:layout_width="29dp"
                        android:layout_height="13dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_billiards" />

                    <ImageView
                        android:id="@+id/iv_lable_two"
                        android:layout_width="29dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/iv_label_one"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_basketball" />

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tv_care_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="999"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@id/tv_care_count"
                            android:text="关注"
                            android:textColor="@color/grayblack"
                            android:textSize="12dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="16dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tv_fans_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="999"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@id/tv_fans_count"
                            android:text="粉丝"
                            android:textColor="@color/grayblack"
                            android:textSize="12dp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="16dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tv_coin_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="999"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@id/tv_coin_count"
                            android:text="果冻"
                            android:textColor="@color/grayblack"
                            android:textSize="12dp" />
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_part2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_one">
            <!--教学科目-->
            <RelativeLayout
                android:id="@+id/rl_two"
                android:layout_width="fill_parent"
                android:layout_height="48dp">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="82dp"
                    android:background="@drawable/button_me" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="教学科目"
                    android:textColor="@color/grayblack"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_course"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="96dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:text="斯诺克"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

            </RelativeLayout>

            <View
                android:id="@+id/view_one"
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_below="@id/rl_two"
                android:background="@color/grayblack" />

            <!--教学地点-->
            <RelativeLayout
                android:id="@+id/rl_three"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_below="@id/view_one">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_me" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="教学地点"
                    android:textColor="@color/grayblack"
                    android:textSize="16dp"

                    />

                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="96dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:text="藏龙岛露天台球俱乐部"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

            </RelativeLayout>

            <View
                android:id="@+id/view_two"
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_below="@id/rl_three"
                android:background="@color/grayblack" />
            <!--所获荣誉-->
            <RelativeLayout
                android:id="@+id/rl_four"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_below="@id/view_two">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_me" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="所获荣誉"
                    android:textColor="@color/grayblack"

                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_honour"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_toRightOf="@+id/textView"
                    android:gravity="center_vertical"
                    android:text="乔氏杯2014大奖赛武汉赛区冠军"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

            </RelativeLayout>

            <View
                android:id="@+id/view_three"
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_below="@id/rl_four"
                android:background="@color/grayblack" />
            <!--最近来过-->
            <RelativeLayout
                android:id="@+id/rl_five"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_below="@id/view_three">

                <Button
                    android:id="@+id/btn_coachcomment"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_me" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="总评级"
                    android:textColor="@color/grayblack"
                    android:textSize="16dp"

                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="96dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_one"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_two"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_three"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_four"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_five"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_star"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="3.0分"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                </LinearLayout>


                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_next" />

            </RelativeLayout>

            <View
                android:id="@+id/view_four"
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_below="@id/rl_five"
                android:background="@color/grayblack" />


            <!--最近来过-->
            <RelativeLayout
                android:id="@+id/rl_six"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_below="@id/view_four">

                <Button
                    android:id="@+id/btn_come"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_me" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="最近来过"
                    android:textColor="@color/grayblack"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="96dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.yuenidong.widget.CircleImageView
                        android:id="@+id/iv_image_one"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_image"
                        android:visibility="gone" />

                    <com.yuenidong.widget.CircleImageView
                        android:id="@+id/iv_image_two"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_image"
                        android:visibility="gone" />

                    <com.yuenidong.widget.CircleImageView
                        android:id="@+id/iv_image_three"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_image"
                        android:visibility="gone" />

                    <com.yuenidong.widget.CircleImageView
                        android:id="@+id/iv_image_four"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_image"
                        android:visibility="gone" />

                    <com.yuenidong.widget.CircleImageView
                        android:id="@+id/iv_image_five"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_image"
                        android:visibility="gone" />


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bottombar"
            android:layout_width="fill_parent"
            android:layout_height="53dp"
            android:layout_below="@id/rl_part2"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_transparent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_bottombar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/iv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/tv_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/link"
                    android:textColor="@color/grayblack"
                    android:textSize="16dp" />


            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>