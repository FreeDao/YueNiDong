<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yuenidong.fragment.FriendMapFragment">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_transparent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"></android.support.v4.view.ViewPager>
    <View
        android:layout_width="8dp"
        android:layout_height="85dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/button_me"
        android:layout_marginBottom="8dp"

        ></View>
    <com.yuenidong.widget.ZoomControlView
        android:id="@+id/ZoomControlView"
        android:layout_width="33dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="101dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_transparent"
        android:gravity="center_horizontal"></com.yuenidong.widget.ZoomControlView>
</FrameLayout>
