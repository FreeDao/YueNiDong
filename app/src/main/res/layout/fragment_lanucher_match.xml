<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout"
    tools:context="com.yuenidong.fragment.LanucherMatchFragment">

    <LinearLayout
        android:id="@+id/ll_theme"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="主题:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_match_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="@string/lanucher_theme"
            android:textColor="@color/grayblack"
            android:textSize="14dp" />

    </LinearLayout>

    <View
        android:id="@+id/view_theme"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll_theme"
        android:background="@color/grayblack"></View>

    <!--时间-->
    <RelativeLayout
        android:id="@+id/ll_time"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@id/view_theme"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="时间:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_match_time"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_time"
            android:background="@color/white"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="请写下您的活动时间"
            android:textColor="@color/grayblack"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="6dp"
            android:layout_height="10dp"></LinearLayout>

        <ImageView
            android:id="@+id/iv_next_two"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_next" />
    </RelativeLayout>

    <View
        android:id="@+id/view_time"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll_time"
        android:background="@color/grayblack"></View>

    <!--地点-->
    <RelativeLayout
        android:id="@+id/ll_place"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@id/view_time"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="地点:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_match_place"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_place"
            android:background="@color/white"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="请写下您的活动地点"
            android:textColor="@color/grayblack"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="6dp"
            android:layout_height="10dp"></LinearLayout>

        <ImageView
            android:id="@+id/iv_next_one"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_next" />
    </RelativeLayout>

    <View
        android:id="@+id/view_place"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll_place"
        android:background="@color/grayblack"></View>

    <!--人数-->
    <LinearLayout
        android:id="@+id/ll_count"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@id/view_place"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="人数:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_match_peopleCount"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="@string/lanucher_count"
            android:textColor="@color/grayblack"
            android:textSize="14dp" />

    </LinearLayout>

    <View
        android:id="@+id/view_count"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll_count"
        android:background="@color/grayblack"></View>

    <RelativeLayout
        android:id="@+id/rl_pusharea"
        android:layout_width="fill_parent"
        android:layout_height="114dp"
        android:layout_below="@id/view_count"
        android:layout_marginTop="16dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_pusharea_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="推送范围:"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_pusharea_word"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_pusharea_word"
            android:text="5km"
            android:textColor="@color/grayblack"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="58dp"
            android:text="3km"
            android:textColor="@color/grayblack"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp"
            android:text="5km"
            android:textColor="@color/grayblack"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginTop="58dp"
            android:text="7km"
            android:textColor="@color/grayblack"
            android:textSize="14dp" />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:minHeight="20dp"
            android:maxHeight="20dp"
            android:layout_alignLeft="@id/tv_three"
            android:layout_alignRight="@id/tv_seven"
            android:layout_below="@id/tv_three"
            android:paddingBottom="5dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="7dp"
            android:max="6"
            android:progress="3"
            android:progressDrawable="@drawable/seekbar"
            android:thumb="@drawable/slider" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_nextStep"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@id/rl_pusharea"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_nextstep"
        android:text="@string/nextstep"
        android:textColor="@color/white"
        android:textSize="18dp" />


</RelativeLayout>
