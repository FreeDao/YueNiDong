<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yuenidong.fragment.FriendMapFragment">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_transparent"></android.support.v4.view.ViewPager>

    <View
        android:layout_width="8dp"
        android:layout_height="85dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="64dp"
        android:background="@drawable/button_me"

        ></View>

    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="266dp"
        android:layout_height="266dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_radar" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@drawable/toast"
        android:gravity="center"
        android:text="以凑齐15人，一起开心的玩耍吧!"
        android:textColor="@color/white"
        android:textSize="20dp" />


</FrameLayout>
