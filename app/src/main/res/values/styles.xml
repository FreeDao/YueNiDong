<resources>

    <style name="actionbar_text_style">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="main_tab_text_style">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="customProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
        <item name="android:layout_width">21dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">23dp</item>
    </style>

    <style name="seekbar" parent="@android:style/Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <!--亲加-->
    <style name="GotyeTitleTextStyle" parent="">
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gotye_text_white</item>
    </style>

    <style name="GotyeMessageTextStyle" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GotyeListViewTextStyle" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gotye_text_dark_gray</item>
    </style>

    <style name="GotyeListViewStyle" parent="">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dip</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="GotyeTitleTextMiddleStyle" parent="GotyeTitleTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GotyeTitleTextSmallStyle" parent="GotyeTitleTextMiddleStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GotyeContentPaddingStyle" parent="">
        <item name="android:paddingLeft">@dimen/gotye_padding_left_right</item>
        <item name="android:paddingRight">@dimen/gotye_padding_left_right</item>
    </style>

    <style name="GotyeListViewItemStyle" parent="GotyeContentPaddingStyle"></style>
    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/btn_gray_normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/timestampe_bg</item>
    </style>
    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>
</resources>